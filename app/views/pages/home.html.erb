<center><h1>Manestage Theatre Company</h1></center>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item ">
      <%= image_tag "Oliver.jpeg", class: 'width-100' %>
    </div>

    <div class="item active">
      <%= image_tag "mermaid.jpg", class: 'width-100' %>
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="pics">
  <div class="greenroom">
    <a href="/greenrooms/greenroom"><%= image_tag "gr.png", class: "nav-image" %></a>
  </div>
  <div class="season">
    <a href="/pages/current_season"><%= image_tag "chitty.png", class: "nav-image" %></a>
  </div>
  <div class="tickets">
    <a href="/pages/buy_tickets"><%= image_tag "lady.png", class: "nav-image" %></a>
  </div>
</div>
