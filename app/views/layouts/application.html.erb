<!DOCTYPE html>
<html>
  <head>
    <title>Manestage Theatre Company</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar">
      <div class="container-fluid">
        <div class="navbar-header">
           <%= link_to "Manestage Theatre Company", root_path, class: "navbar-brand" %>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li> <%= link_to "About", "pages/about" %> </li>
          <li> <%= link_to "Auditions" %> </li>
          <li> <%= link_to "Education" %> </li>
          <li> <%= link_to "Tickets" %> </li>
          <li> <%= link_to "Volunteer" %> </li>
          <li> <%= link_to "Donate" %> </li>
        </ul>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
